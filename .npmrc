# Force pnpm to hoist all dependencies to the root node_modules
# This allows Metro to find "ghost" dependencies like webidl-conversions
public-hoist-pattern[]=*

# Ensure styleq is hoisted (CRITICAL for Metro resolution)
public-hoist-pattern[]=*styleq*
public-hoist-pattern[]=*react-native-web*

# Shamefully hoist to avoid Metro resolution issues
shamefully-hoist=true

# Use strict peer dependencies
strict-peer-dependencies=false

# Enable package import protocol
enable-pre-post-scripts=true
